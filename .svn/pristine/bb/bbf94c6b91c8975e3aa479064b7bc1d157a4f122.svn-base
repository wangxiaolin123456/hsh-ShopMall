<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#E93441"
        android:gravity="center"
        android:text="订单"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_order_orders_goods"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="商品订单"
                android:gravity="center"/>
            <TextView
                android:id="@+id/activity_order_orders_goods_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fb434e"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#e4e4e4"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="#e4e4e4"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_order_orders_origin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="原产地订单"
                android:gravity="center"/>
            <TextView
                android:id="@+id/activity_order_orders_origin_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#e4e4e4"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/activity_order_orders_service"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="配套服务订单"
                android:textSize="12dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/activity_order_orders_service_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/order_activity_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>