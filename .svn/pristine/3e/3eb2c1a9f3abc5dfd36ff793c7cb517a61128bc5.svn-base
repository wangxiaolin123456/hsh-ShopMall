<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.diy.widget.CircularImage
            android:id="@+id/item_goods_detail_circle_image"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_goods_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逗逼啊琳"
                android:textSize="12sp"
                android:textColor="#565656" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_marginTop="9dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/item_goods_detail_yuan_rating"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.2" />

                <TextView
                    android:id="@+id/item_goods_detail_content_time"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginLeft="13dp"
                    android:text="2016-10-11"
                    android:textColor="#bebebe"
                    android:textSize="9sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_goods_detail_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center|left"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
           android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="很不错！"
            android:textSize="12dp" />
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#f1f1f1" />-->
</LinearLayout>