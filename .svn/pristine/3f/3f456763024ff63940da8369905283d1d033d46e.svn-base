<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_original_search" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部分类"
            android:textColor="#000000"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/all_line_color" />

        <TextView
            android:id="@+id/tv_typegood"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="好评排序"
            android:textColor="#000000"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/all_line_color" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格排序"
            android:textColor="#000000"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/all_line_color" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销量排序"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/viewOriginal"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/all_line_color" />

    <com.example.administrator.merchants.common.views.RefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/aftSearchListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />
    </com.example.administrator.merchants.common.views.RefreshLayout>
</LinearLayout>