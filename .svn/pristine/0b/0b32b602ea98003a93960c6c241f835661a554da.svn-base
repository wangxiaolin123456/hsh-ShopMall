<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="前一天"
            android:textColor="#585858"
            android:textSize="10sp" />

        <View
            android:layout_gravity="center_vertical"
            android:background="#f2f2f2"
            android:layout_width="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="47dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="利润日查询"
            android:textColor="#ffaf39"
            android:textSize="10sp" />
        <View
            android:layout_gravity="center_vertical"
            android:background="#f2f2f2"
            android:layout_width="2dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="16dp"
            android:layout_height="18dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="后一天"
            android:textColor="#585858"
            android:textSize="10sp" />
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:id="@+id/linear_cost"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="成本支出项"
            android:textColor="#5a5a5a"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="房租费:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:maxLength="15"
            android:id="@+id/house_fee"
            android:singleLine="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/house_yuan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="水电费:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/water_fee"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:gravity="center"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/water_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="人工工资:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/people_fee"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:gravity="center"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/people_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="原材料采购:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/original_fee"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:gravity="center"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/original_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="税金:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/tax_fee"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:gravity="center"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tax_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="其他不可预见费用:"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/not_see_fee"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入"
            android:gravity="center"
            android:textColor="#a2a2a2"
            android:textSize="12sp"
            android:maxLength="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/not_see_yuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="1dp"
            android:text="元"
            android:visibility="gone"
            android:textColor="#5a5a5a"
            android:textSize="12sp" />
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66bebebe" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f4f4f5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:id="@+id/linear_makeprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="剩余项"
            android:textColor="#585858"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="营业额:"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/business_fee"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入"
                    android:gravity="center"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp"
                    android:maxLength="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/business_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="1dp"
                    android:text="元"
                    android:visibility="gone"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66bebebe" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="其他利润来源:"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/other_fee"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入"
                    android:gravity="center"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp"
                    android:maxLength="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/other_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="1dp"
                    android:text="元"
                    android:visibility="gone"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66bebebe" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="库存:"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/store_fee"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入"
                    android:gravity="center"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp"
                    android:maxLength="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/store_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="1dp"
                    android:text="元"
                    android:visibility="gone"
                    android:textColor="#5a5a5a"
                    android:textSize="12sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#66bebebe" />
            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn"
                    android:textColor="#ffffff"
                    android:text="确定"
                    android:textSize="13sp"
                    android:background="@drawable/btn_make_sure"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>