<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="127dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yuan_confirm"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="98dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/confirm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lines="2"
                android:text="unknow"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edi_beizhu"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/confirm_title"
                android:background="@null"
                android:gravity="start"
                android:hint="备注"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_confirm_order_mode_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edi_beizhu"
                android:layout_marginRight="15dp"
                android:text=""
                android:textColor="@color/text_gray_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/yuan_rating"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="4dp"
                android:text="¥"
                android:textColor="#FF9D09"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/confirm_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/yuan_rating"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/fuhao"
                android:text="null"
                android:textColor="#FF9D09"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="47dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="数量:  "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/number_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/all_bg_gray_color" />

</LinearLayout>