<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head"/>


    <LinearLayout
        android:id="@+id/linear_classify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="分类"
            android:textColor="#585858"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_classify"
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/gotopage" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f4f4f5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
    <LinearLayout
        android:id="@+id/linear_makeprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_makeprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="定价"
            android:textColor="#585858"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_makeprice"
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/gotopage" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bebebe" />
</LinearLayout>