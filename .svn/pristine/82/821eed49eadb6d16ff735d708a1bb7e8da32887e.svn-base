<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.example.administrator.merchants.util.CustomerViewPage
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="350dp">

    </com.example.administrator.merchants.util.CustomerViewPage>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/shopname"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/two"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="2"
            android:text="商品名称"
            android:textColor="#333333"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/two"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/momo"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_month_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销:"
                    android:textColor="@color/text_huise"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goodsDetail_monNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="null"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_below="@+id/momo"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="库存:"
                    android:textColor="@color/text_huise"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/goodsDetail_storeNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="null"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textview_sale_price_sy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:text="￥"
            android:textColor="#ff9966"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textColor="#ff9966"
            android:textSize="17sp" />

    </LinearLayout>

    <View
