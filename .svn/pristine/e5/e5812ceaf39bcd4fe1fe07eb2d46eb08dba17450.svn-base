<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f5"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_phone"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:padding="5dp"
            android:phoneNumber="true"
            android:textSize="13sp" />

        <Button
            android:id="@+id/activity_forgrt_password_get_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/get_code"
            android:enabled="false"
            android:gravity="center"
            android:text="获得验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="5dp"
        android:text="*验证码每周只能获取7次"
        android:textColor="#dc0a0a"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/activity_forgrt_password_input_verification_code_yes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/red_trues"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:digits="1234567890abcdefghijklmnopqrstuvw.xyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_shape"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_new_password_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:digits="1234567890abcdefghijklmnopqrstuvw.xyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:gravity="center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_forgrt_password_complete"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="23dp"
        android:background="@drawable/edit_button"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="13sp" />
</LinearLayout>