<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head"/>
    <EditText
        android:maxLength="6"

        android:id="@+id/activity_update_beibi_old"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_shape"
        android:hint="请输入6位原贝币密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:digits="1234567890"

        android:textSize="12sp" />

    <EditText
        android:digits="1234567890"
        android:maxLength="6"
        android:id="@+id/activity_update_beibi_new"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_shape"
        android:hint="请输入6位新贝币密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="12sp" />

    <EditText
        android:maxLength="6"
        android:id="@+id/activity_update_beibi_new_again"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:digits="1234567890"
        android:background="@drawable/edit_shape"
        android:hint="请在次输入6位新贝币密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/activity_update_beibi_yes"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_btn_selector"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="14sp" />


</LinearLayout>