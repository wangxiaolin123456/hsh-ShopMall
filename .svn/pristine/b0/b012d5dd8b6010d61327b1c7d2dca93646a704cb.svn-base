<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="订单编号："
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_fragment_finished_order_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/reds"
                android:text="334554321123322"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_fragment_finished_order_yes"
                android:background="@drawable/edit_shape"
                android:layout_width="52dp"
                android:layout_height="32dp"
                android:text="已完成"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/item_fragment_finished_order_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/imageloading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下单时间:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_fragment_finished_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2016-06-27 10:15:03"
                        android:textColor="#ee5654"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                    <TextView
                        android:layout_marginRight="30dp"
                        android:textSize="12dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:lines="2"
                        android:id="@+id/item_fragment_finished_order_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#e0e0e0"
                        android:text="小肥羊火锅料等10件商品"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总计:"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_fragment_finished_order_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="￥ 50"
                        android:textColor="#ee5654"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4" />
</LinearLayout>