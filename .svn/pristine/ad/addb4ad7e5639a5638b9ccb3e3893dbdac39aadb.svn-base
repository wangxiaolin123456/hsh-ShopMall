<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="收货人："
            android:textColor="#cfcfcf"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_update_address_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:maxLength="8"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#a5a5a5" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/activity_update_address_sex_nan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/address_checkbox"
            android:text="   先生"
            />


        <RadioButton
            android:id="@+id/activity_update_address_sex_nv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/address_checkbox"
            android:text="   女士" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#a5a5a5" />

    <!--<TextView-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:background="#a5a5a5" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="联系方式："
            android:textColor="#cfcfcf"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_update_address_tel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#a5a5a5" />

    <!--<TextView-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:background="#a5a5a5" />-->

    <LinearLayout
        android:id="@+id/ll_address_choose"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="所在地区："
            android:textColor="#cfcfcf"
            android:textSize="16sp" />

        <!--<EditText-->
        <!--android:id="@+id/activity_update_address_address"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@null"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textColor="#000000"-->
        <!--android:paddingLeft="3dp"-->
        <!--android:singleLine="true"-->
        <!--android:textSize="16sp" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/shi"
            android:text="沈阳"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/qu"
            android:paddingBottom="2dp"
            android:background="@drawable/didi"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="14sp"
            android:text="区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#a5a5a5" />
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="详细地址："
            android:textColor="#cfcfcf"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_update_address_str"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#a5a5a5" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/activity_update_address_commit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_button"
        android:text="保存"
        android:textColor="#FFFFFF" />


</LinearLayout>