<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lv_msg_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_one"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="信息管理"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lv_job_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_two"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="招聘信息"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_loan_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_three"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/eight_text_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="贷款申请"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lv_price_magager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_four"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_four"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="原产地采购"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lv_self_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_five"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/eight_text_five"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="库存管理"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_inventory_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_six"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_six"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="商品管理"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_peitao_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_seven"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_seven"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="自营信息"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_yuan_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/eight_img_eight"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/eight_text_eight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_horizontal"
                android:text="配套服务"
                android:textColor="@color/text_huise"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="23dp"
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:background="#f8f8fa"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <View
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/text_you"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:text="猜你喜欢"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>