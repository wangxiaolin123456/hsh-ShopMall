<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="127dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_yuan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:descendantFocusability="beforeDescendants">

            <LinearLayout
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/guess_title"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:lines="2"
                    android:text="unknow"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_shop_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/guess_title"
                            android:text="月销量："
                            android:textColor="#999999"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/month_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="null"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/kucun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_shop_num"
                            android:layout_toRightOf="@+id/guess_title"
                            android:text="库存："
                            android:textColor="#999999"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/store_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/month_count"
                            android:gravity="right"
                            android:text="null"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_one"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/tv_yuan_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kucun"
                    android:gravity="start"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="unknow"
                    android:textColor="#999999"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail">

                <TextView
                    android:id="@+id/fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/yuan_rating"
                    android:text="¥"
                    android:textColor="#FF9D09"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/danjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/yuan_rating"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/fuhao"
                    android:text="null"
                    android:textColor="#FF9D09"
                    android:textSize="13sp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/yuan_rating"
                style="@style/roomRatingBarss"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@+id/rmb"
                android:layout_marginTop="3dp"
                android:clickable="false"
                android:focusable="false"
                android:isIndicator="true"
                android:numStars="5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rmb"
                android:layout_marginTop="2.5dp"
                android:layout_toRightOf="@+id/yuan_rating"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rating_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/yuan_rating"
                    android:text="null"
                    android:textColor="#FF9D09"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/tv_rating_num"
                    android:text="分"
                    android:textColor="#FF9D09"
                    android:textSize="9sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/all_bg_gray_color" />

</LinearLayout>