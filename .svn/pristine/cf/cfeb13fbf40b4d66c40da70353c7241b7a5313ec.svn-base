<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg_gray_color"
    android:orientation="vertical">

    <include layout="@layout/head_original_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/all_line_color" />
        <include layout="@layout/view_search_hot_head"/>
        <com.example.administrator.merchants.common.views.MyGridView
            android:id="@+id/lv_search_history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="5dp"
            android:numColumns="3"
            android:verticalSpacing="0dp"/>
        <include layout="@layout/view_search_hot_foot"/>
    </LinearLayout>
</LinearLayout>

