<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shopping_repay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <com.diy.widget.CircularImage
            android:id="@+id/item_accumulated_income_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_accumulated_income_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_accumulated_income_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="150dp"
                android:ellipsize="end"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="222222222222"
                android:textColor="#1a1a1a"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_accumulated_income_money"
            android:text="累计收益:  ¥"
            android:textColor="#f06b73"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/item_accumulated_income_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:layout_marginRight="20dp"
            android:gravity="end"
            android:text="null"
            android:textColor="#f06b73"
            android:textSize="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/all_line_color" />

</LinearLayout>