<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/account_bills_gray_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_phone"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:padding="5dp"
            android:phoneNumber="true"
            android:textSize="13sp" />

        <Button
            android:id="@+id/activity_forgrt_password_get_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_theme"
            android:enabled="false"
            android:gravity="center"
            android:text="获得验证码"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/account_bills_gray_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="5dp"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/activity_forgrt_password_input_verification_code_yes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/choice"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/account_bills_gray_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:digits="1234567890abcdefghijklmnopqrstuvw.xyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/account_bills_gray_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/activity_forgrt_password_input_new_password_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:digits="1234567890abcdefghijklmnopqrstuvw.xyzABCDEFGHIJKLMNOPQRSTUVWXYZ_"
            android:gravity="center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_forgrt_password_complete"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="23dp"
        android:background="@drawable/dialog_theme"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="13sp" />
</LinearLayout>