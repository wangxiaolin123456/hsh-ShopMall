<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="16dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/item_bei_record_jian_miaoshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/reduce_tv"
            android:text="贝币转赠"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_bei_record_jian_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_bei_record_jian_miaoshu"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/reduce_tv"
            android:text="11月19日"
            android:textColor="@color/text_gray_color"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/reduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/item_bei_record_jian_number"
            android:text="-"
            android:textColor="#fa7775"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_bei_record_jian_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:text="0金贝币"
            android:textColor="#fa7775"
            android:textSize="16sp" />

        <!--用户昵称-->
        <!--<TextView-->
        <!--android:id="@+id/item_bei_record_jian_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="互实会"-->
        <!--android:textColor="@color/text_black"-->
        <!--android:textSize="12dp" />-->


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/all_line_color" />
</LinearLayout>