<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/llayout_details_top"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/goods_details_banner"
        android:layout_width="match_parent"
        android:layout_height="450dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:src="@drawable/sharess" />
    </LinearLayout>

    <TextView
        android:id="@+id/goodsDetail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="5dp"
        android:singleLine="false"
        android:text="该产品暂无详情！"
        android:textColor="@color/color_75"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textview_sale_price_sy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/themeColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/themeColor"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/goods_details_teXu_ybeibei_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_detail_shop_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/goods_details_jifen_text_teXu"
            android:background="@drawable/cancle_shapess"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="银贝币可抵用0元"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/point_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_point_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="积分"
            android:textColor="@color/themeColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/goods_details_jifen_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/point_tv"
            android:text="购买可获"
            android:textColor="@color/color_75"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/goods_details_jifen_text_teXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/goods_details_jifen_line"
            android:text="0"
            android:textColor="@color/color_75"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/goods_details_jifen_text_teXu"
            android:text="积分"
            android:textColor="@color/color_75"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/express_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_tv"
            android:layout_marginTop="15dp"
            android:text="快递: 0元"
            android:textColor="@color/color_75"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/goodsDetail_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_tv"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/express_fee_tv"
            android:text="(满0可包邮)"
            android:textColor="@color/color_75"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goodsDetail_discount"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/momo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_month_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月销:"
                    android:textColor="@color/text_gray_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goodsDetail_monNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/momo"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="库存:"
                    android:textColor="@color/text_gray_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/goodsDetail_storeNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f8" />
    <!--评价部分-->
    <RelativeLayout
        android:id="@+id/look_all_pj_rel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">

        <View
            android:id="@+id/red_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/themeColor" />

        <TextView
            android:id="@+id/details_pj_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/red_view"
            android:gravity="center_vertical"
            android:text="商品评价(0)"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/pj_more_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ckxq" />

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/pj_more_icon"
            android:gravity="center_vertical"
            android:text="查看更多"
            android:textColor="@color/themeColor"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/all_line_color" />

    <LinearLayout
        android:id="@+id/llyout_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.diy.widget.CircularImage
                    android:id="@+id/civ_user_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:id="@+id/details_pj_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/civ_user_head"
                    android:text="用户昵称"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />


                <RatingBar
                    android:id="@+id/evaluate_ratingBar_start"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/details_pj_name_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/civ_user_head"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="1" />


                <TextView
                    android:id="@+id/details_pj_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="评价时间"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray_color" />

            </RelativeLayout>


            <TextView
                android:id="@+id/details_pj_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <!--最多3张图-->
            <LinearLayout
                android:id="@+id/comment_img_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/evaluate_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/image_loading"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/evaluate_image_two"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/image_loading"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/evaluate_image_three"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/image_loading"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/color_f8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fen_lei_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="商品详情"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fen_lei_line" />
    </LinearLayout>

</LinearLayout>