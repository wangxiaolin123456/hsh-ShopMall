<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_service_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item_service_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/item_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="业务名称"
                android:textColor="#585858"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/goto_page_gray" />
    </RelativeLayout>

    <View
        android:id="@+id/item_service_view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/all_line_color" />

    <View
        android:id="@+id/item_service_views"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/all_line_color"
        android:visibility="gone" />
</LinearLayout>