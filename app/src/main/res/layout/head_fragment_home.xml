<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#E93441"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--扫一扫-->
        <ImageView
            android:id="@+id/home_sao_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/add_sy" />

        <TextView
            android:id="@+id/home_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_sao_image"
            android:text="开始定位"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!--消息-->
        <RelativeLayout
            android:id="@+id/home_message_line"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/message" />

            <TextView
                android:id="@+id/car_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/image_goodsDetail_car"
                android:background="@drawable/yuan"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
        <!--搜索-->
        <LinearLayout
            android:id="@+id/home_search_line"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/home_message_line"
            android:layout_toRightOf="@+id/home_location_tv"
            android:background="@drawable/btn_yuanjiaojuxing_nor">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:src="@drawable/btn_fangdajing_nor" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="请输入商品名称"
                android:textColor="@color/all_line_color"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>





</LinearLayout>